<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog">

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_export_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/space_median"
        app:constraint_referenced_ids="iv_logo_export,tv_export, flow_export_choice"
        app:flow_verticalGap="15dp"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_logo_export"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/login_logo_description"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tv_export"
        style="@style/ToolbarTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/export_dialog"
        android:textSize="18sp" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_export_choice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="iv_export_no,iv_export_yes"
        app:flow_horizontalBias="0.5"
        app:flow_horizontalGap="10dp"
        app:flow_horizontalStyle="packed"
        app:flow_wrapMode="chain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/iv_export_no"
        android:layout_width="157dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_dialog_no"
        android:fontFamily="@font/pretendard_bold"
        android:text="@string/no"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/iv_export_yes"
        android:layout_width="157dp"
        android:layout_height="52dp"
        android:background="@drawable/bg_dialog_yes"
        android:fontFamily="@font/pretendard_bold"
        android:text="@string/yes"
        android:textColor="@color/white"
        android:textSize="16sp" />

</androidx.constraintlayout.widget.ConstraintLayout>