<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dest_home">

    <action
        android:id="@+id/action_global_to_search_category"
        app:destination="@id/dest_search_category" />

    <fragment
        android:id="@+id/dest_home"
        android:name="com.sesac.developer_study_platform.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/dest_search_category"
        android:name="com.sesac.developer_study_platform.SearchCategoryFragment"
        android:label="fragment_search_category"
        tools:layout="@layout/fragment_search_category">
        <argument
            android:name="position"
            app:argType="integer" />
    </fragment>
</navigation>